<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/custonBGColor"
    tools:context=".activityEmer">

    <TextView
        android:id="@+id/txtEmer"
        android:layout_width="254dp"
        android:layout_height="77dp"
        android:gravity="center"
        android:text="@string/txtEmer"
        android:textStyle="bold"
        android:textColor="?attr/custonPrimaryTextColor"
        app:layout_constraintBottom_toTopOf="@+id/btnEmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEmer"
        android:layout_width="181dp"
        android:layout_height="77dp"
        android:text="@string/btnCallEmer"
        android:textColor="?attr/custonPrimaryTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>